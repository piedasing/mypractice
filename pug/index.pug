    h3 我的網站
    #app.row
      .col-12.col-md-3(v-for="card in cards")
        .card
          card.card-body(v-bind:card_data = "card")
      

    template(lang="pug")#card
      .card_container
        .title
          h4.card-title {{card_data.title}}
        .preview
          iframe(:src="card_data.preview")
        .go
          a.btn.btn-primary(:href="card_data.preview" target="_blank") go


